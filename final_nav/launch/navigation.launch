<launch>

  <!-- Connect the robot to a keyboard teleop controller -->
  <!-- <node name="teleop_twist_keyboard" pkg="teleop_twist_keyboard" type="teleop_twist_keyboard.py"
    output="screen" respawn="true">
    <param name="repeat_rate" type="double" value="10.0" />
  </node> -->

  <!-- Run the map server -->
  <arg name="map_file" default="$(find final_slam)/maps/final_map_2d.yaml" />
  <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)" />

  <!-- Launch the AMCL Localizer -->
  <include file="$(find final_slam)/launch/amcl.launch" />
  <!-- <node pkg="tf2_ros" type="static_transform_publisher" name="map2odom" args="0 0 0 0 0 0 1 map
  odom" /> -->
  <!-- <node pkg="tf" type="static_transform_publisher" name="map2odom" args="0 0 0 0 0 0 1 map
  odom" /> -->


  <!-- Launch Move Base -->
  <include file="$(find final_nav)/launch/move_base.launch" />

  <!-- Launch Rviz with our settings -->
  <node type="rviz" name="rviz" pkg="rviz" args="-d $(find final_nav)/config/navigation.rviz"
    output="log" respawn="true" />

  <node ns="me5413_world" pkg="me5413_world" type="goal_publisher_node" name="goal_publisher_node"
    output="screen" />

</launch>